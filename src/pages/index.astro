---
import "../styles/global.css";
---

<html>



  <head>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSkt6+gKD7SkXr59TxGPhEomNcP+FjEZ8wGCIksdWG4"
      crossorigin="anonymous"
    />
    <title>Weather Dashboard</title>
  </head>

<!--                                                           -->


  <body>
    <div class="container my-5">


	<!--                                                           -->
      <!-- Header -->
      <header class="bg-primary text-white p-4 rounded shadow">
        <div class="d-flex justify-content-between align-items-center">
          <h1>Weather Dashboard</h1>
          <p class="mb-0">Enter a city, country, or ZIP code!</p>
        </div>
      </header>
<!--                                                           -->




      <!-- Search Box -->
      <div class="bg-light p-4 rounded shadow my-4">
        <input
          type="text"
          id="searchInput"
          class="form-control"
          placeholder="Search for weather (city, country, or ZIP)"
        />
        <button id="searchBtn" class="btn btn-primary mt-3 w-100">Search</button>
      </div>

	  <!--                                                           -->

      <!-- Current Weather Section -->
      <section id="weatherResult" class="my-4"></section>

      <!-- Forecast Section -->
      <section id="hourlyForecast" class="my-4">
        <h2>3-Hourly Forecast</h2>
        <div class="row">
          <!--                                                           -->
			<!--                                                           -->




        </div>
      </section>
    </div>
  </body>
</html>
