---
import "../styles/global.css";
---

<html>
  <head>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSkt6+gKD7SkXr59TxGPhEomNcP+FjEZ8wGCIksdWG4"
      crossorigin="anonymous"
    />
    <title>Weather Dashboard</title>
  </head>
  <body>
    <div class="container mt-5">
      <h1 class="text-center">Weather Dashboard</h1>
      <div class="search-box my-4">
        <input
          type="text"
          id="searchInput"
          class="form-control"
          placeholder="Enter city or country"
        />
        <button id="searchBtn" class="btn btn-primary mt-2 w-100">Search</button>
      </div>
      <div id="weatherResult" class="mt-4">
        <!-- Weather results will appear here -->
      </div>
    </div>
    <script src="/scripts/weather.js" is:inline></script>
  </body>
</html>
